@using Restaurant_Menu_Organiser.Models.Notifications
@{
    Dictionary<int, Notification> NotificationBody = ViewBag.NotificationBody;
}
@foreach (KeyValuePair<int, Notification> kvp in NotificationBody)
{
    <div class="modal-header">
        <h5 class="modal-title" status="" id="notificationModalLabel">@kvp.Value.NameHeader&ensp;@kvp.Value.DateandTime</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        @kvp.Value.Body
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Approve</button>
        <button type="button" class="btn btn-danger">Decline</button>
    </div>
}
