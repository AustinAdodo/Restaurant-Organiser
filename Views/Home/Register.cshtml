@model Restaurant_Menu_Organiser.ViewModels.RegisterViewModel
<h1>Register</h1>
<div class="container">
    <div col-md-12>
        <form method="post" asp-controller="Home" asp-action="Register">
            <div asp-validation-summary="All" class="text-danger">
            </div>
            <div class="form-group">
                <label class="col-sm-2" asp-for="Email"></label>
                <div class="col-md-10">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"> </span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" asp-for="Password"></label>
                <div class="col-md-10">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" asp-for="ConfirmPasword"> </label>
                <div class="col-md-10">
                    <input asp-for="ConfirmPasword" class="form-control" placeholder="Confirm" />
                    <span asp-validation-for="ConfirmPasword" class="text-danger"> </span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" name="Submit">Register This User</button>
        </form>
    </div>
</div>
}
