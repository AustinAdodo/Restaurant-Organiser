@model Restaurant_Menu_Organiser.ViewModels.LoginViewModel
@inject SignInManager<IdentityUser> signInManager
@{
    ViewData["Title"] = "Welcome" + User.Identity.Name;
}

<div class="text-center">
    <h1 class="display-4">Restaurant Manager</h1>
</div>
@*<div class="container">
        <div class="card-header"></div><br/>
    <Table><thead><tr><td></td><td></td></tr></thead></Table>
    </div>*@
<div class="container">
    <div class="row">
        <div class="col-md-4" style="width: 250px; height:250px;"></div>
        <div class="col-md-4 align-self-center" id="cheffpic" style="background-image: url('/Images/HappyCheff.jpg'); width: 200px; height: 200px; padding-top: 50px; border:2px solid skyblue">
        </div>
        <div class="col-md-4">
            @if (signInManager.IsSignedIn(User))
            {
                <div class=""><a asp-action="Activity" asp-controller="Home" class="nav-link btn btn-link py-0" style="width:auto">Your Activity</a></div>
            }
            @*///USER IS NOT LOGGED IN<br/> *@
            else
            {
                <form asp-controller="Home" asp-action="Index" method="post" class="mt-3">
                    <div class="container">
                        <div class="form-group row">
                            <div class="col-sm-3"><Label asp-for="Email" class="col-sm-2 col-form-label"></Label></div><br /><br />
                            <div class="col-sm-9">
                                <input asp-for="Email" class="form-control" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-sm-3"><Label asp-for="@Model.EmployeePassword" class="col-sm-2 col-form-label"></Label></div>
                            <div class="col-sm-9">
                                <input asp-for="@Model.EmployeePassword" class="form-control" placeholder="Password">
                                <span asp-validation-for="@Model.EmployeePassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group container">
                        <div class="row">
                            <div class="col-md-11 offset-1">
                                <span class="text-info float-md-right">@Html.ActionLink("Forgot Password?", "Forgot Password", "Account")</span>
                                <span><button type="submit" class="btn btn-primary offset-3" placeholder="Name">Login</button></span>
                            </div>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
