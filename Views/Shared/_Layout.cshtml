<!DOCTYPE html>
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<html>
<head>
    <environment exclude="Production">
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Restaurant_Menu_Organiser</title>
        <link href="~/jquery-ui-1.13.1.custom/jquery-ui.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link href="~/css/css/fontawesome.css" rel="stylesheet" />
        <link href="~/css/css/regular.css" rel="stylesheet" />
        <link href="~/css/css/solid.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.css" />
        <style type="text/css">
        </style>
    </environment>
    <environment include="Production">
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Restaurant_Menu_Organiser</title>
        <link href="~/jquery-ui-1.13.1.custom/jquery-ui.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
              integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute"
              asp-suppress-fallback-integrity="true"
              crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/site.css" />
        <style type="text/css"></style>
    </environment>
</head>
<body class="mainbodycon">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 offset-2 align-self-center"><img src="/Images/HappyCheff2.jpg" style="display:inline-grid;height: 25px; width: 25px;" /></div>
                    <div class="col-md-12"><a class="navbar-brand" id="brand" style="color: #7386D5" asp-area="" asp-controller="Home" asp-action="Index">Restaurant Organiser</a></div>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <div class="row" style="margin:0px">
                                <div class="col-md-6 offset-3 align-content-md-center" style="height: 22px; width:inherit"><img src="/Images/HappyCheff2.jpg" style="display:none;height: 20px; width: 20px;" /></div>
                                <div class="col-md-12 align-content-center" style="width:100px;">
                                    <a class="nav-link purplehighlight" style="color: #fff;" id="User Details" asp-area="" asp-controller="Home" asp-action="Activity"><span class="fas fa-dashboard"></span>Take Order</a>
                                </div>
                            </div>
                        </li>
                        @{ if (SignInManager.IsSignedIn(User))
                            {
                                <li class="nav-item dropdown" data-toggle="dropdown" id="manageDropdown">
                                    <div class="row" style="margin: 0px; width: 100px; cursor:pointer">
                                        <div class="col-md-6 offset-3 align-self-center" style="height: 22px; width:inherit">
                                            <img src="/Images/HappyCheff2.jpg" style="display: none; height: 20px; width: 20px;" />
                                        </div>
                                        <div class="col-md-12">
                                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" style="color:#fff;">Manage</a>
                                            <ul id="ulmanage" class="dropdown-menu" style="padding: 10px;">
                                                <li class="dropdown-item">
                                                    <a href="" class="dropdown-item">Users</a>
                                                    <ul class="submenu dropdown-menu" style="left: 100%; top: -7px; display: none;">
                                                        <li>
                                                            <a class="dropdown-item" asp-controller="Home" asp-action="Register">Register</a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item" asp-controller="Home" asp-action="Create">Users List</a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item" asp-action="Activity" asp-controller="Home">Activities</a>
                                                        </li>
                                                    </ul>
                                                </li>
                                                <li class="dropdown-item">
                                                    <a href="#" class="dropdown-item">Roles</a>
                                                    <ul class="submenu dropdown-menu" style="left: 100%; top:-7px ; display:none">
                                                        <li>
                                                            <a class="btn btn-link" asp-action="CreateRole" asp-controller="Administration">Create Role</a>
                                                        </li>
                                                        <li>
                                                            <a class="" asp-area="" asp-controller="ProductDefinitions" asp-action="Create">Role Management</a>
                                                        </li>
                                                        <li>
                                                            <a class="" asp-area="" asp-controller="Administration" asp-action="Index">Role List</a>
                                                        </li>
                                                    </ul>
                                                </li>
                                                <li class="dropdown-item">
                                                    <a href="#" class="dropdown-item">Products</a>
                                                    <ul class="submenu dropdown-menu" style="left: 100%; top:-7px ; display:none">
                                                        <li>
                                                            <a class="nav-link text-dark" asp-area="" asp-controller="ProductDefinitions" asp-action="Create">Create Product</a>
                                                        </li>
                                                        <li>
                                                            <a class="nav-link text-dark" asp-area="" asp-controller="ProductDefinitions" asp-action="Create">Product List</a>
                                                        </li>
                                                        <li>
                                                            <a class="nav-link text-dark" asp-area="" asp-controller="ProductDefinitions" asp-action="Create">Generate Order</a>
                                                        </li>
                                                    </ul>
                                                </li>
                                                <li class="dropdown-item">
                                                    <a href="" class="dropdown-item">Employees</a>
                                                    <ul class="submenu dropdown-menu" style="left: 100%; top:-7px ; display:none">
                                                        <li class="nav-item">
                                                            @Html.ActionLink("Employee List", "Index", "Employees")
                                                        </li>
                                                        <li>
                                                            @Html.ActionLink("Create Employee", "Create", "Employees")
                                                        </li>
                                                        <li>
                                                            @Html.ActionLink("Approvals", "Approvals", "Employees")
                                                        </li>
                                                        <li>
                                                            <a class="nav-link btn btn-link" asp-area="" asp-controller="Employee" asp-action="Create">Employee Flags</a>
                                                        </li>
                                                    </ul>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>
                                @:&ensp;&ensp;&ensp;
                                <li class="nav-item">
                                    <div class="row" style="margin:0px">
                                        <div class="col-md-6 offset-3 align-self-center" style="height: 22px; width:inherit"><img src="/Images/HappyCheff2.jpg" style="display:none;height: 20px; width: 20px;" /></div>
                                        <div class="col-md-12">
                                            <a class="nav-link purplehighlight" style="color: #fff;" id="CookBook" asp-area="" asp-controller="Home" asp-action="CookBook"><span class="fas fa-pen"></span>Cook Book</a>
                                        </div>
                                    </div>
                                </li>
                            }
                        }
                        @{
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <img src="/Images/HappyCheff2.jpg" style="display:none" /><br />
                                    <a class="nav-link purplehighlight" style="color: #fff;" id="settings" asp-area="" asp-controller="Home" asp-action="Settings"><span class="fas fa-wrench"></span>&nbsp;Settings</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Restaurant Menu Organiser - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <environment exclude="Production">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/jquery-ui-1.13.1.custom/jquery-ui.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/css/js/fontawesome.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </environment>
    <environment include="Production">
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
        @RenderSection("Scripts", required: false)
    </environment>
</body>
</html>
